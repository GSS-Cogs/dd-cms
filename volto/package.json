{
  "name": "idp-d-cms",
  "description": "A Volto-powered Plone frontend",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "start": "razzle start",
    "clean": "rimraf ./build/*",
    "postinstall": "yarn omelette && yarn patches",
    "omelette": "ln -sf node_modules/@plone/volto/ omelette",
    "patches": "/bin/bash patches/patchit.sh > /dev/null 2>&1 ||true",
    "build": "razzle build",
    "test": "jest --env=jest-environment-jsdom-sixteen --watch",
    "test-ci": "jest --env=jest-environment-jsdom-sixteen --watchAll=false --ci --reporters=default --reporters=jest-junit",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "NODE_ENV=production node node_modules/@plone/volto/src/i18n.js",
    "develop": "missdev --config=jsconfig.json --output=addons --fetch-https",
    "start:dev": "yarn develop && yarn install && yarn start"
  },
  "private": true,
  "workspaces": [
    "src/addons/volto-govuk-theme",
    "src/addons/volto-climatechange-elements",
    "src/addons/volto-chart-builder"
  ],
  "addons": [
    "@eeacms/volto-plotlycharts",
    "@eeacms/volto-datablocks",
    "@eeacms/volto-columns-block",
    "volto-slate:asDefault",
    "volto-govuk-theme",
    "volto-chart-builder"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "api"
    ],
    "transform": {
      "^.+\\.js(x)?$": "babel-jest",
      "^.+\\.css$": "jest-css-modules",
      "^.+\\.scss$": "jest-css-modules",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(jpg)$": "jest-file",
      "^.+\\.(ico)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/volto/jest-svgsystem-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@plone/volto).+\\.js$"
    ],
    "moduleNameMapper": {
      "@plone/volto/babel": "<rootDir>/node_modules/@plone/volto/babel",
      "@plone/volto/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "load-volto-addons": "<rootDir>/node_modules/@plone/volto/jest-addons-loader.js",
      "@package/(.*)$": "<rootDir>/src/$1",
      "~/(.*)$": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "@plone/volto/test-setup-globals.js",
      "@plone/volto/test-setup-config.js"
    ],
    "globals": {
      "__DEV__": true
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "roots": [
      "<rootDir>/src/addons/volto-climatechange-elements/",
      "<rootDir>/src/addons/volto-govuk-theme/"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.overrides",
        "options": {
          "parser": "less"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-idiomatic-order"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "rule-empty-line-before": [
        "always-multi-line",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    },
    "ignoreFiles": "theme/themes/default/**/*.overrides"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie 11",
    "not dead"
  ],
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@eeacms/volto-columns-block": "4.0.0",
    "@eeacms/volto-datablocks": "2.0.17",
    "@eeacms/volto-plotlycharts": "2.0.10",
    "@plone/volto": "13.15.1",
    "govuk-frontend": "4.0.0",
    "govuk-react": "0.10.0",
    "govuk-react-jsx": "6.2.1",
    "gss-cogs-chart-builder": "^0.5.6",
    "mrs-developer": "1.6.1",
    "react-helmet": "6.1.0",
    "react-plotly.js": "^2.5.1",
    "volto-authomatic": "1.0.3",
    "volto-slate": "5.3.3"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "3.1.3",
    "jest": "^26.6.3",
    "jest-junit": "13.0.0",
    "prettier": "2.0.5",
    "razzle-plugin-scss": "3.4.5",
    "rimraf": "3.0.2",
    "stylelint": "13.3.3",
    "stylelint-config-idiomatic-order": "8.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2"
  },
  "resolutions": {
    "draft-js": "0.10.5",
    "razzle": "3.4.2",
    "react": "16.14.0"
  }
}
